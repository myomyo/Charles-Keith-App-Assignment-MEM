<?xml version="1.0" encoding="utf-8"?>
<com.mem.charleskeith.viewpods.EmptyViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        tools:src="@drawable/empty_image" />

    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_empty"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_medium_2"
        tools:text="@string/empty_msg"
        android:fontFamily="@font/font_futra_light"
        android:textSize="@dimen/text_regular_2x"/>

</com.mem.charleskeith.viewpods.EmptyViewPod>