<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_online"
            android:layout_width="160dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_medium"
            android:fontFamily="@font/font_futra_light"
            android:text="ONLINE EXCLUSIVE"
            android:textColor="@color/accent"
            android:textSize="@dimen/text_regular" />

        <ImageView
            android:id="@+id/iv_new_item"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_below="@+id/tv_item_online"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="@dimen/margin_card_medium_2"
            android:layout_marginTop="@dimen/margin_medium"
            android:scaleType="fitXY"
            android:src="@drawable/ck_item1" />

        <TextView
            android:id="@+id/tv_item_status"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="42dp"
            android:background="@color/primaryColor"
            android:fontFamily="@font/font_futra_light"
            android:paddingHorizontal="@dimen/margin_card_medium_2"
            android:text="NEW"
            android:gravity="center_vertical"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/text_regular_2x" />

        <TextView
            android:id="@+id/tv_new_item_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_new_item"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium"
            android:fontFamily="@font/font_futra_light"
            android:text="POINTED FLAT MULES"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/text_regular_2x"
            android:textAlignment="center"/>

    </RelativeLayout>
</RelativeLayout>