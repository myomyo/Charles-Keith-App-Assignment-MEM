<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.NewInDetailsInfoActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:src="@drawable/ic_arrow_back_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/subtitle"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/text_regular_3x"
                    app:fontFamily="@font/font_futra_light" />
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/primaryColor"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/tv_item_id"
            style="@style/details_info"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:text="CK1-70380670_RED" />

        <TextView
            android:id="@+id/tv_description_title"
            style="@style/details_info"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:text="DESCRIPTION"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_description"
            style="@style/details_info"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="CHARLES &amp; KEITH - Shoes Red flat mules featuring a pointed toe and see through design."
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_material"
                style="@style/details_info"
                android:layout_width="0dp"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Material Description" />

            <TextView
                android:id="@+id/tv_material_value"
                style="@style/details_info"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_weight="1"
                android:text="TPU" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_depth"
                style="@style/details_info"
                android:layout_width="0dp"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Depth (mm)" />

            <TextView
                android:id="@+id/tv_depth_value"
                style="@style/details_info"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_weight="1"
                android:text="N/A" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_heel_height"
                style="@style/details_info"
                android:layout_width="0dp"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Heel Height (mm)" />

            <TextView
                style="@style/details_info"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_weight="1"
                android:text="LOW (0-55)" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_height"
                style="@style/details_info"
                android:layout_width="0dp"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Height (mm)" />

            <TextView
                android:id="@+id/tv_height_value"
                style="@style/details_info"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_weight="1"
                android:text="N/A" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium">

            <TextView
                android:id="@+id/tv_width"
                style="@style/details_info"
                android:layout_width="0dp"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Width (mm)" />

            <TextView
                android:id="@+id/tv_width_value"
                style="@style/details_info"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_weight="1"
                android:text="N/A" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:background="@color/secondaryDarkColor"
            android:fontFamily="@font/font_futra_light"
            android:paddingVertical="@dimen/margin_medium_3"
            android:text="SHARE"
            android:textAlignment="center"
            android:textColor="@color/secondaryTextColor"
            android:textSize="@dimen/text_regular"
            android:textStyle="bold"
            android:clickable="true"/>

        <TextView
            style="@style/details_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:paddingVertical="@dimen/margin_medium_3"
            android:text="ADD TO WISHLIST"
            android:textAlignment="center"
            android:textStyle="bold"
            android:clickable="true"/>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
