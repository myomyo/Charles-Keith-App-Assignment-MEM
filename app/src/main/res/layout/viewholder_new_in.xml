<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:text="ONLINE EXCLUSIVE"
            android:textColor="@color/accent"
            android:textSize="@dimen/text_regular_2x" />

        <ImageView
            android:id="@+id/iv_new_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:layout_below="@+id/tv_item_online"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_medium"
            android:scaleType="fitXY"
            android:src="@drawable/ck_item1" />

        <TextView
            android:id="@+id/tv_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="@dimen/margin_xxxlarge"
            android:background="@color/primaryColor"
            android:paddingHorizontal="@dimen/margin_medium_2"
            android:paddingVertical="@dimen/margin_medium"
            android:text="NEW"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/text_regular_2x" />

        <TextView
            android:id="@+id/tv_new_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_new_item"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="POINTED FLAT MULES"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/text_regular_2x" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>